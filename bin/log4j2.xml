<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Properties>
        <Property name="basePath">./logs</Property>
    </Properties>
 
    <Appenders>
        <RollingFile name="fileLogger" fileName="${basePath}/app-info.log" filePattern="${basePath}/app-info-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
 
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout   pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </Console>
    </Appenders>
    
    <Loggers>
        <Logger name="wycc" level="info" additivity="true">
            <appender-ref ref="fileLogger" level="debug" />
        </Logger>
         <!-- Log everything in hibernate -->
	    <Logger name="org.hibernate" level="trace" additivity="false">
	      <AppenderRef ref="console" />
	      <AppenderRef ref="fileLogger" />
	    </Logger>
	
	    <!-- Log SQL statements -->
	    <Logger name="org.hibernate.SQL" level="info" additivity="false">
	      <AppenderRef ref="console" />
	      <AppenderRef ref="fileLogger" />
	    </Logger>
	
	    <!-- Log JDBC bind parameters -->
	    <Logger name="org.hibernate.type.descriptor.sql" level="info" additivity="false">
	      <AppenderRef ref="console" />
	      <AppenderRef ref="fileLogger" />
	    </Logger>
	
	    <!-- Log custom packages -->
	    <Logger name="com.boraji.tutorial.hibernate" level="info" additivity="false">
	      <AppenderRef ref="console" />
	      <AppenderRef ref="fileLogger" />
	    </Logger>
        <Root level="info" additivity="false">
            <appender-ref ref="console" />
             <AppenderRef ref="fileLogger" />
        </Root>
    </Loggers>
    
</Configuration>